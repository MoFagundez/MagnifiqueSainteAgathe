<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/StandardCard">

    <LinearLayout
        android:orientation="horizontal"
        style="@style/StandardCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_item"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:scaleType="centerCrop"
                android:src="@drawable/image_placeholder" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/margin_card_standard"
                android:layout_marginStart="@dimen/margin_card_standard"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="@dimen/font_size_card_title"
                android:textStyle="bold"
                tools:text="@string/tool_title" />

            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/margin_card_standard"
                android:layout_marginStart="@dimen/margin_card_standard"
                android:layout_weight="3"
                android:textSize="@dimen/font_size_card_description"
                tools:text="@string/tool_description"/>

            <TextView
                android:id="@+id/address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/margin_card_standard"
                android:layout_marginStart="@dimen/margin_card_standard"
                android:gravity="bottom"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_card_description"
                tools:text="@string/tool_address" />

            <TextView
                android:id="@+id/distance_text_view"
                android:layout_width="wrap_content"
                android:gravity="bottom"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/margin_card_standard"
                android:layout_marginStart="@dimen/margin_card_standard"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_card_description"
                android:textStyle="italic"
                tools:text="@string/tool_distance" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>